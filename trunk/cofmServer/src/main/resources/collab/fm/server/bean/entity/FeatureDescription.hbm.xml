<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="collab.fm.server.bean.entity">
  <class name="FeatureDescription" table="FeatureDescription">
  	<id name="id" type="long" column="descriptionId">
  		<generator class="native"></generator>
  	</id>
  	<version name="version" access="field" column="entityVersion"></version>
  	<property name="value" type="string" column="description"></property>
  	
  	<component name="vote" class="Vote">
  		<set name="supportersInternal" table="DescriptionSupporter">
  			<key column="descriptionId"></key>
  			<element type="long" column="supporter" not-null="true"></element>
  		</set>
  		<set name="opponentsInternal" table="DescriptionOpponent">
  			<key column="descriptionId"></key>
  			<element type="long" column="opponent" not-null="true"></element>
  		</set>
  	</component> 
  </class>
</hibernate-mapping>