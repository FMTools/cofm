<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
	 xmlns:v="collab.fm.client.ui.view.*"
	 width="100%" height="100%">
	
	<!-- Feature model tree view -->
	<mx:Panel id="leftPanel">
		<mx:TabNavigator id="treeTab" selectedIndex="1">
			<mx:Canvas label="GLobal Tree" width="300" height="700">
				<v:GlobalTree id="globalTree" width="100%" height="100%" />
			</mx:Canvas>
			<mx:Canvas label="Working Tree" width="300" height="700">
				<v:WorkingTree id="workingTree" width="300" height="100%" />
			</mx:Canvas>
			<mx:Canvas label="Personal Tree" width="300" height="700">
				<mx:Tree id="personalTree" width="300" height="100%" />
			</mx:Canvas>
		</mx:TabNavigator>
	</mx:Panel>
	
	<mx:VBox>
		<mx:Panel id="rightTopPanel">
			<v:TopElementCreateForm width="600" height="100%" />
			<v:FeatureEditForm id="featureEdit" width="600" height="100%" />
		</mx:Panel>
		
		<mx:Panel id="rightBottomPanel" title="{RS.OP_LIST_TITLE}">
			<v:OperationList width="600" height="150" />
		</mx:Panel>
	</mx:VBox>
	
	<mx:Script>
		<![CDATA[
			import collab.fm.client.event.*;
			import collab.fm.client.command.*;
			import collab.fm.client.data.*;
			import collab.fm.client.util.*;
			
			public function initData(modelId: int): void {
				FeatureModel.instance.resetAll();
				new UpdateCommand(modelId).execute();
			}
			
		]]>
	</mx:Script>
</mx:HBox>
