<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="quiz.server.bean">
  <class name="User" table="QUIZ_USER">
  
  	<id name="id" type="integer" column="USER_ID">
  		<generator class="native"></generator>
  	</id>
  	
  	<property name="name" type="string" column="NAME"></property>
  	<property name="vcode" type="string" column="VCODE"></property>
  	
  	<list name="answers" inverse="false" cascade="all">
  		<key column="USER_ID"></key>
  		<list-index column="ANSWER_INDEX"></list-index>
  		<one-to-many class="Answer"/>
  	</list>
  </class>
</hibernate-mapping>