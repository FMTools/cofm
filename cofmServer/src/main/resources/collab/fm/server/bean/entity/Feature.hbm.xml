<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="collab.fm.server.bean.entity">
  <class name="Feature" table="Feature">
  	<id name="id" column="featureId" type="long">
  		<generator class="native"></generator>
  	</id>
  	
  	<version name="version" access="field" column="entityVersion"></version>
  	
  	<component name="existence" class="Vote">
  		<set name="supportersInternal" table="FeatureSupporter">
  			<key column="featureId"></key>
  			<element type="long" column="supporter" not-null="true"></element>
  		</set>
  		<set name="opponentsInternal" table="FeatureOpponent">
  			<key column="featureId"></key>
  			<element type="long" column="opponent" not-null="true"></element>
  		</set>
  	</component>
  	
  	<component name="optionality" class="Vote">
  		<set name="supportersInternal" table="FeatureOptionalSupporter">
  			<key column="featureId"></key>
  			<element type="long" column="supporter" not-null="true"></element>
  		</set>
  		<set name="opponentsInternal" table="FeatureOptionalOpponent">
  			<key column="featureId"></key>
  			<element type="long" column="opponent" not-null="true"></element>
  		</set>
  	</component>
  	
  	<!-- One-to-many association to FeatureName.
  	-->
  	<set name="namesInternal" table="FeaturePossibleName" cascade="all, delete-orphan">
  		<key column="featureId"></key>
  		<many-to-many class="FeatureName" column="nameId" unique="true"></many-to-many>
  	</set>
  	
  	<!-- One-to-many association to FeatureDescription -->
  	<set name="descriptionsInternal" table="FeaturePossibleDescription" cascade="all, delete-orphan">
  		<key column="featureId"></key>
  		<many-to-many class="FeatureDescription" column="descriptionId" unique="true"></many-to-many>
  	</set>
  	
  	<!-- Many-to-many association to Relationship.
  	   The statement "inverse=true" tells Hibernate that the two statements in class Feature and Relationship
  	   (namely "aFeature.addRelationship(aRel)" and "aRel.addFeature(aFeature)")  
  	   happens on the same row in the table which persists the association. -->
  	<set inverse="true" name="relationshipsInternal" table="FeatureRelationshipInvolvement">
  		<key column="featureId"></key>
  		<many-to-many column="relationshipId" class="Relationship"></many-to-many>
  	</set>
  	
  	<!-- Many-to-one association to Model -->
  	<many-to-one name="model" column="modelId" class="Model" not-null="true" />
  	
  </class>
</hibernate-mapping>