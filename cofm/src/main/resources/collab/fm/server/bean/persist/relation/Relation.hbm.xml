<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="collab.fm.server.bean.persist.relation">
  <joined-subclass name="Relation" extends="collab.fm.server.bean.persist.Element" table="RELATION">
    <key column="RELATION_ID" />
    
    <!--+++++++++++++++++
      Relation properties
      +++++++++++++++++-->
    
    <property name="signature" type="string" column="SIGNATURE"></property>
    <property name="name" type="string" column="NAME"></property>
    <property name="refine" type="boolean" column="IS_REFINEMENT"></property>
    <property name="predicate" type="integer" column="PREDICATE"></property>
	<!-- Many-to-many association with Entity -->
	<set name="entities" table="ENTITY_RELATION_ASSOC">
		<key column="RELATION_ID" />
		<many-to-many column="ENTITY"
			class="collab.fm.server.bean.persist.entity.Entity" />
	</set>
	
	<!-- Many-to-one association to Model -->
	<many-to-one name="model" column="MODEL_ID" class="collab.fm.server.bean.persist.Model" not-null="true" />
	
  	
		
  </joined-subclass>
</hibernate-mapping>