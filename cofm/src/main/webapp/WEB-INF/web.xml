<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>core</servlet-name>
  	<servlet-class>collab.fm.server.controller.CometFmServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>plainHttp</servlet-name>
  	<servlet-class>collab.fm.server.controller.PlainHttpServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>core</servlet-name>
  	<url-pattern>/flexrpc</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>plainHttp</servlet-name>
  	<url-pattern>/p</url-pattern>
  </servlet-mapping>
</web-app>